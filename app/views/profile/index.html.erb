<main class="flex justify-center font-open-sans">
  <section class="md:w-4/6 md:mt-10 border border-2 border-green-200 p-2">
    <%= render "nav" %>
    <div>
      <div class="mb-8">
        <h3 class="text-black-200 text-xl">Basic Information</h3>
        <label class="text-gray-400 text-sm font-light">View and update your personal details here.</label>
      </div>
      <div class="border-t border-gray-300">
        <%= form_with do |f| %>
          <div class="flex justify-between py-3">
            <div class="flex flex-col md:w-5/12">
              <%= f.label :firstname %>
              <%= f.text_field :firstname %>
            </div>
             <div class="flex flex-col md:w-5/12">
              <%= f.label :lastname %>
              <%= f.text_field :lastname %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</main>